<%- model_class = Company -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:company_name) %>:</strong></dt>
  <dd><%= @company.company_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_line_1) %>:</strong></dt>
  <dd><%= @company.address_line_1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_line_2) %>:</strong></dt>
  <dd><%= @company.address_line_2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zip_code) %>:</strong></dt>
  <dd><%= @company.zip_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city_name) %>:</strong></dt>
  <dd><%= @company.city_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country_name) %>:</strong></dt>
  <dd><%= @company.country_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email_address) %>:</strong></dt>
  <dd><%= @company.email_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_number) %>:</strong></dt>
  <dd><%= @company.phone_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:kvk_number) %>:</strong></dt>
  <dd><%= @company.kvk_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:btw_number) %>:</strong></dt>
  <dd><%= @company.btw_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:iban_number) %>:</strong></dt>
  <dd><%= @company.iban_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bic_number) %>:</strong></dt>
  <dd><%= @company.bic_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bank_holder_name) %>:</strong></dt>
  <dd><%= @company.bank_holder_name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              companies_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_company_path(@company), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              company_path(@company),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
