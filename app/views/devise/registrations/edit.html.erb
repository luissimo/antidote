<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="wrap-content container" id="container">
    <!-- start: USER PROFILE -->
    <div class="container-fluid container-fullw">
      <div class="row">
        <div class="col-md-12">
          <div class="tabbable">
            <div class="tab-content">
              <div id="panel_edit_account" class="tab-pane fade in active">
                <form action="#" role="form" id="form">
                  <fieldset>
                    <legend>
                      Gegevens wijzigen
                    </legend>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group">
                          <%= f.label :email, class: 'control-label' %>
                          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
                        </div>
                        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                            <div>De volgende email moet nog bevestigd worden: <%= resource.unconfirmed_email %></div>
                        <% end %>
                        <div class="form-group">
                          <%= f.label 'Nieuwe wachtwoord', class: 'control-label' %>
                          <%= f.password_field :password, class: 'form-control', autocomplete: 'off' %>
                        </div>
                        <div class="form-group">
                          <%= f.label 'Herhaal nieuwe wachtwoord', class: 'control-label' %>
                          <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: 'off' %>
                        </div>
                        <div class="form-group">
                          <%= f.label 'Huidige wachtwoord', class: 'control-label' %>
                          <%= f.password_field :current_password, class: 'form-control', autocomplete: 'off' %>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-group">
                          <label class="text-bold text-large"> Kies een logo voor op uw facturen en offertes </label>
                            <div class="fileinput-preview"><%= image_tag current_user.image.thumb.url %></div>

                              <% if current_user.image.url.present? %>
                                  <%= image_tag(current_user.image.url) %>
                                  <%= f.label :remove_image do %>
                                      <%= f.check_box :remove_image %>
                                  <% end %>
                              <% end %>
                              <%= f.file_field :image %>
                              <%= f.hidden_field :image_cache %>

                        </div>
                      </div>
                    </div>
                  </fieldset>
                  <div class="row">
                    <div class="col-md-12">
                      <div>
                        <%= button_to "Account verwijderen", registration_path(resource_name), class: 'btn btn-sm btn-danger', data: { confirm: "Weet u het zeker? Al uw gegevens gaan definitief verloren." }, method: :delete %><span class="text-small"> (<strong>Let op!</strong> Als u uw account verwijdert gaan alle ingevulde gegevens definitief verloren.)</span>
                        <hr>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <p class="text-center">
                        Door op 'wijzigingen opslaan' te klikken gaat u akkoord met onze algemene voorwaarden.
                      </p>
                    </div>
                    <div class="col-md-12 actions">
                      <%= f.submit "Wijzigingen opslaan".html_safe, class: 'btn btn-primary btn-blue center-block' %>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- end: USER PROFILE -->
  </div>
<% end %>