<%- model_class = Customer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:company_name) %>:</strong></dt>
  <dd><%= @customer.company_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @customer.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @customer.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:send_to_name) %>:</strong></dt>
  <dd><%= @customer.send_to_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_line_1) %>:</strong></dt>
  <dd><%= @customer.address_line_1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_line_2) %>:</strong></dt>
  <dd><%= @customer.address_line_2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zip_code) %>:</strong></dt>
  <dd><%= @customer.zip_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country_name) %>:</strong></dt>
  <dd><%= @customer.country_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email_address) %>:</strong></dt>
  <dd><%= @customer.email_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_number) %>:</strong></dt>
  <dd><%= @customer.phone_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:kvk_number) %>:</strong></dt>
  <dd><%= @customer.kvk_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:btw_number) %>:</strong></dt>
  <dd><%= @customer.btw_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:iban_number) %>:</strong></dt>
  <dd><%= @customer.iban_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bic_number) %>:</strong></dt>
  <dd><%= @customer.bic_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bank_holder_name) %>:</strong></dt>
  <dd><%= @customer.bank_holder_name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              customers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_customer_path(@customer), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              customer_path(@customer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
