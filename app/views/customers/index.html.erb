<%- model_class = Customer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:company_name) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:send_to_name) %></th>
      <th><%= model_class.human_attribute_name(:address_line_1) %></th>
      <th><%= model_class.human_attribute_name(:address_line_2) %></th>
      <th><%= model_class.human_attribute_name(:zip_code) %></th>
      <th><%= model_class.human_attribute_name(:country_name) %></th>
      <th><%= model_class.human_attribute_name(:email_address) %></th>
      <th><%= model_class.human_attribute_name(:phone_number) %></th>
      <th><%= model_class.human_attribute_name(:kvk_number) %></th>
      <th><%= model_class.human_attribute_name(:btw_number) %></th>
      <th><%= model_class.human_attribute_name(:iban_number) %></th>
      <th><%= model_class.human_attribute_name(:bic_number) %></th>
      <th><%= model_class.human_attribute_name(:bank_holder_name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.id, customer_path(customer) %></td>
        <td><%= customer.company_name %></td>
        <td><%= customer.first_name %></td>
        <td><%= customer.last_name %></td>
        <td><%= customer.send_to_name %></td>
        <td><%= customer.address_line_1 %></td>
        <td><%= customer.address_line_2 %></td>
        <td><%= customer.zip_code %></td>
        <td><%= customer.country_name %></td>
        <td><%= customer.email_address %></td>
        <td><%= customer.phone_number %></td>
        <td><%= customer.kvk_number %></td>
        <td><%= customer.btw_number %></td>
        <td><%= customer.iban_number %></td>
        <td><%= customer.bic_number %></td>
        <td><%= customer.bank_holder_name %></td>
        <td><%=l customer.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_customer_path(customer), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      customer_path(customer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_customer_path,
            :class => 'btn btn-primary' %>
