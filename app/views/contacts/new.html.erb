<!-- start: BASIC MAP -->
<div class="container-fluid container-fullw">
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-white">
        <div class="panel-body">
          <div class="map" id="map1"></div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-white">
        <div class="panel-heading border-light">
          <h4 class="panel-title text-center text-bold">Informatie</h4>
        </div>
        <div class="panel-body">
          <div class="col-md-5">
            <%= image_tag('/LAYOUT-4/STANDARD/assets/images/logo.png', class: 'img-responsive center-block', width: '100%') %>
          </div>
          <div class="col-md-7">
            <ul class="list-unstyled pull-left">
              <li><span class="text-large text-bold text-blue fa fa-bars"> Adres:</span> Essebaan 19, 2908LJ Capelle aan den IJssel</li><br/>
              <li><span class="text-large text-bold text-blue fa fa-phone"> Telefoon:</span> 010 26 13 207</li><br/>
              <li><span class="text-large text-bold text-blue fa fa-envelope"> Email:</span> info@oqba.nl</li><hr/>
              <li><span class="text-large text-bold text-blue">Postbus:</span>  Postbus 25, 2908 LJ Capelle aan den IJssel</li><br/>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="panel panel-white">
        <div class="panel-heading border-light">
          <h4 class="panel-title text-center text-bold">Contact</h4>
        </div>
        <div class="panel-body">
          <div class="box-login">
            <%= form_for @contact, html: {class: 'form-horizontal'} do |f| %>
                <form class="form-login">
                  <div class="form-group">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, class: 'center-block form-control', autofocus: true, required: true %>
                  </div>
                  <div class="form-group">
                    <%= f.label :onderwerp %><br/>
                    <%= f.text_field :subject, class: 'center-block form-control', required: true %>
                  </div>
                  <div class="form-group">
                    <%= f.label :bericht %><br/>
                    <%= f.text_area :message, class: 'center-block form-control', required: true %>
                  </div>
                  <div class="form-group">
                    <%= f.hidden_field :nickname, hint: 'leave this field blank' %>
                  </div>
                  <div class="form-actions">
                    <%= f.submit "Verstuur bericht", class: 'btn btn-red center-block' %>
                  </div><br/>
                </form>
            <% end %>
          </div>
        </div>
      </div
    </div>
  </div>
</div>
<!-- end: BASIC MAP -->

