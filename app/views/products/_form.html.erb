<%= form_for @product, :html => { :class => "form-horizontal product" } do |f| %>
<div class="col-md-8 col-md-offset-3">
  <% if @product.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Hoeveelheid', :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.text_field :quantity, :class => 'form-control' %>
    </div>
    <%=f.error_span(:quantity) %>
  </div>
  <div class="form-group">
    <%= f.label 'Omschrijving', :class => 'control-label col-lg-2' %>
    <div class="col-lg-8">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label 'Bedrag per stuk (ex btw)', :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.text_field :unitprice, :class => 'form-control' %>
    </div>
    <%=f.error_span(:unitprice) %>
  </div>
  <div class="form-group">
    <%= f.label 'BTW (%)', :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.text_field :btw, :class => 'form-control' %>
    </div>
    <%=f.error_span(:btw) %>
  </div>


  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary btn-success' %>
      <%= link_to t('.cancel', :default => 'annuleren'),
                products_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
</div>