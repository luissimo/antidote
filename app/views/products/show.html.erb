<%- model_class = Product -%>
<hr/>
<div class="col-md-12 col-md-offset-4">
  <h1><strong><%=t '.title', :default => "Product ##{@product.id} " %></strong></h1>
</div>

<div class="col-md-12 col-md-offset-4">
  <strong><code><%= model_class.human_attribute_name(:Hoeveelheid) %>:</code> <%= @product.quantity %></strong><br/>
  <strong><code><%= model_class.human_attribute_name(:Omschrijving) %>:</code> <%= @product.description %></strong><br/>
  <strong><code><%= model_class.human_attribute_name('Bedrag per stuk (exclusief btw)') %>:</code> <%= number_to_currency(@product.unitprice) %></strong><br/>
  <strong><code><%= model_class.human_attribute_name('Totaalbedrag (inclusief btw)') %>:</code> <%= number_to_currency(@product.btw_calc && @product.total) %></strong><br/>
  <strong><code><%= model_class.human_attribute_name('Btw (%)') %>:</code> <%= @product.btw %></strong><br/><br/>
</div>

<div class="col-md-3 col-md-offset-4">
  <%= link_to t('.back', :default => t("helpers.links.Terug")),
                products_path, :class => 'btn btn-primary btn-info'  %>
  <%= link_to t('.edit', :default => t("helpers.links.Aanpassen")),
                edit_product_path(@product), :class => 'btn btn-primary btn-success' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                product_path(@product),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Weet u het zeker?')) },
                :class => 'btn btn-primary btn-danger' %>
</div>