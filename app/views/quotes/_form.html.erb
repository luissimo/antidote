<%= form_for @quote do |f| %>
    <div class="container-fluid container-fullw">
      <div class="row">
        <div class="col-md-4 col-md-offset-4 text-center">
          <% if @quote.errors.any? %>
              <div class="alert alert-danger text-center" >
                <h4>U heeft <%= pluralize(@quote.errors.count, "error") %>:</h4>

                <ul class="list-unstyled">
                  <% @quote.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <div class="panel panel-white">
            <div class="panel-body">
              <div class="field">
                <%= f.label :Offertenummer, class: 'text-bold text-large' %><br>
                <%= f.text_field :number, placeholder: '2016-0001', id: 'factuurnummer_input', class: 'form-control' %>
              </div>
              <div class="field">
                <%= f.label :Munteenheid, class: 'text-bold text-large' %><br>
                <%= f.select(:currency, [[' €', '€', title: 'Euro', value: 'EURO'], [' $', '$', title: 'US Dollar', value: 'USD'],
                                         [' £', '£', title: 'GBP Pound', value: 'GBP']], {}, {id: 'invoice_currency'}) %>
              </div>
              <div class="field">
                <%= f.label :Datum, class: 'text-bold text-large' %><br>
                <%= f.date_select :date, class: 'form-control' %>
              </div>
              <div class="field">
                <%= f.label 'Vervaldatum', class: 'text-bold text-large' %><br>
                <%= f.date_select :duedate, class: 'form-control' %>
              </div><br/>
            </div>
          </div>
        </div>
        <div class="col-md-8">
          <div class="panel panel-white">
            <div class="panel-body">
              <div class="invoice">
                <div class="row invoice-logo">
                  <div class="col-sm-6">
                    <img alt="" src="">
                  </div>
                  <div class="col-sm-6">
                    <p class="text-dark">
                      <strong class="factuurnummer_output"><%= @quote.number %></strong> <small class="text-light factuurdatum_output"></small>
                    </p>
                  </div>
                </div><hr>
                <div class="row">
                  <div class="col-sm-4">
                    <div class="well">
                      <address>
                        <%= f.fields_for :customer do |customer| %>
                            <div class="field">
                              <%= customer.label '(Bedrijfs)naam ontvanger', class: 'text-large'  %><br/>
                              <%= customer.text_field :company_name, placeholder: 'bedrijfsnaam', class: 'form-control customer_name_input' %>
                            </div>
                            <div class="field">
                              <%= customer.label 'Adres ontvanger', class: 'text-large' %><br>
                              <%= customer.text_field :address_line_1, placeholder: 'adres ontvanger', class: 'form-control' %>
                            </div>
                            <div class="field">
                              <%= customer.label 'Postcode & stad', class: 'text-large' %><br>
                              <%= customer.text_field :zip_code, placeholder: '1234AB Rotterdam', class: 'form-control' %>
                            </div>
                        <% end %>
                      </address>
                    </div>
                  </div>
                  <div class="col-sm-4 pull-right">
                    <ul class="list-unstyled invoice-details padding-bottom-30 padding-top-10 text-dark">
                      <%= f.fields_for :company do |company| %>
                          <li>
                            <strong>BTW:</strong><br/>
                            <%= company.text_field :btw_number, class: 'form-control' %>
                          </li>
                          <li>
                            <strong>Bedrijfsnaam:</strong><br/>
                            <%= company.text_field :company_name, class: 'form-control company_name_input' %>
                          </li>
                          <li>
                            <strong>IBAN:</strong><br/>
                            <%= company.text_field :iban_number, class: 'form-control' %>
                          </li>
                          <li><br/>
                            <strong>Offertedatum:</strong> <em id="date_output">01/01/2016</em>
                          </li>
                          <li>
                            <strong>Vervaldatum:</strong><em class="duedate_output"> 11/02/2016 </em>
                          </li>
                      <% end %>
                    </ul>
                  </div>
                </div><hr/>
                <div class="row">
                  <div class="col-sm-12">
                    <p class="text-small">
                      Geachte <span class="customer_name_output"><%= @quote.customer.company_name %></span>,<br/>
                      Hierbij ontvangt u van ons de prijsopgave <strong class="factuurnummer_output"><%= @quote.number %></strong> voor de onderstaande diensten.
                    </p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-12">
                    <table class="table table-striped">
                      <thead>
                      <tr>
                        <th class="hidden-480"> Hoeveelheid </th>
                        <th class="hidden-480"> Beschrijving </th>
                        <th class="hidden-480"> Bedrag </th>
                        <th class="hidden-480"> Totaal </th>
                        <th class="hidden-480"> Btw(%) </th>
                      </tr>
                      </thead>
                      <tfoot>
                      <tr id="hiderow">
                        <td colspan="6"><a id="add_products" class="btn btn-success btn-sm" href="javascript:;" title="Rij toevoegen"><span class="ti-plus"></span>  Rij toevoegen</a></td>
                      </tr>
                      </tfoot>
                      <%= f.fields_for :products do |product| %>
                          <tbody>
                          <tr class="products_tr">
                            <td> <%= product.text_field :quantity, class: 'quantity form-control' %> </td>
                            <td> <%= product.text_area :description, class: 'form-control' %> </td>
                            <td> <%= product.text_field :unitprice, class: 'unitprice form-control' %> </td>
                            <td class="row_total"> </td>
                            <td> <%= product.select(:btw, [[' 21%', 21, title: '21%'],[' 6%', 6, title: '6%'], [' 0%', 0, title: '0%']], {}, {class: 'btw_percentage', id: nil})%> </td>
                            <td class='delete_tr'><a class="delete" title="Rij verwijderen"><span class="ti-close"></span></a></td>
                          </tr>
                      <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-12 invoice-block">
                    <ul class="list-unstyled amounts text-small">
                      <li>
                        <strong>Subtotaal:</strong>
                        <div class="field">
                          <%= f.hidden_field :subtotal, class: 'invoice_subtotal' %>
                          <p class="invoice_subtotal"></p>
                        </div>
                      </li>
                      <!-- <li>
                         <strong>Discount:</strong>
                       </li> -->
                      <li>
                        <strong>BTW:</strong>
                        <div class="field">
                          <%= f.hidden_field :btwtotal, class: 'invoice_btwtotal' %>
                          <p class="invoice_btwtotal"></p>
                        </div>
                      </li>
                      <li class="text-extra-large text-dark margin-top-15">
                        <strong>Totaal:</strong>
                        <div class="field">
                          <%= f.hidden_field :total, class: 'invoice_total' %>
                          <p class="invoice_total"></p>
                        </div>
                      </li>
                    </ul>
                    <br>
                  </div>
                </div>
              </div><hr/>
              <div class="col-sm-12">
                <p>
                  We hopen u hiermee voldoende geïnformeerd te hebben.<br/>
                  Met vriendelijke groet,<br/>
                  <span class="company_name_output"><%= @quote.company.company_name %></span>
                </p><br/>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-12">
        <div class="row actions">
          <div class="col-md-4">
            <%= link_to 'Annuleren', quotes_path, class: 'btn btn-primary btn-block btn-info' %>
          </div>
          <div class="col-md-4">
            <a onclick="javascript:window.print();" class="btn btn-primary float-right btn-block"> Print <i class="fa fa-print"></i></a>
          </div>
          <div class="col-md-4">
            <%= f.submit 'Opslaan', class: 'btn btn-primary btn-success btn-block' %>
          </div>
        </div>
      </div>
    </div><br/><br/>
<% end %>
<!-- end: INVOICE -->


<script src="/LAYOUT-4/STANDARD/assets/js/quote.js"></script>
