<div class="row">
  <div class="col-md-12">
    <div class="panel panel-white">
      <div class="panel-body">
        <h5 class="over-titel margin-bottom-15">Mijn <span class="text-bold">offertes</span></h5>
        <div class="alert alert-info">Hier ziet u een overzicht van al uw offertes.</div>
        <%= link_to ' Nieuwe offerte', new_quote_path, class: 'btn btn-primary btn-lg pull-right fa fa-arrow-circle-down' %><br/><br/>
        <div class="table-responsive">
          <table class="table table-bordered table-hover">
            <thead>
            <tr>
              <th>Offertenummer</th>
              <th>Voor</th>
              <th>Datum</th>
              <th>Verloopt op</th>
              <th>Totale btw bedrag</th>
              <th>Subtotaal</th>
              <th>Totaal</th>
              <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
            <% @quotes.each do |quote| %>
                <tr>
                  <td><%= quote.number %></td>
                  <td><%= quote.customer.company_name %></td>
                  <td><%= quote.date.strftime('%d-%m-%Y') %></td>
                  <td><%= quote.duedate.strftime('%d-%m-%Y') %></td>
                  <td><%= quote.currency %><%= '%.2f' % quote.btwtotal %></td>
                  <td><%= quote.currency %><%= '%.2f' % quote.subtotal %></td>
                  <td><%= quote.currency %><%= '%.2f' % quote.total %></td>
                  <td><%= link_to '', quote, class: 'btn btn-primary btn-info glyphicon glyphicon-search' %>
                    <%= link_to 'Aanpassen', edit_quote_path(quote), class: 'btn btn-primary btn-success' %>
                    <%= link_to 'X', quote, method: :delete, data: { confirm: 'Weet u het zeker?' },
                                class: 'btn btn-primary btn-danger' %>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<br>
